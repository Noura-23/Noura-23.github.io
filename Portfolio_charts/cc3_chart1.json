{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "UK Net Migration and GDP Growth (2012-2024)",
    "subtitle": ["Comparing migration levels and economic growth"],
    "subtitleFontStyle": "italic",
    "offset": 15
  },
  "width": 500,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/Noura-23/Noura-23.github.io/refs/heads/main/Portfolio_data/UK_data.csv"
  },
  "transform": [{"filter": "datum.Year > 0"}],
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "title": "Year",
      "axis": {"labelAngle": 0}
    }
  },
  "layer": [
    {
      "mark": {
        "type": "line",
        "color": "#ec539d",
        "strokeWidth": 1.5
      },
      "encoding": {
        "y": {
          "field": "Net migration Total",
          "type": "quantitative",
          "title": "Net Migration (# of people)",
        }
      }
    },
    {
      "mark": {
        "type": "line",
        "color": "#faa9b8",
        "strokeWidth": 1.5
      },
      "encoding": {
        "y": {
          "field": "GDP growth (%)",
          "type": "quantitative",
          "title": "GDP Growth (%)"
        }
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "darkred",
        "strokeDash": [5, 5],
        "strokeWidth": 1.5
      },
      "encoding": {
        "x": {"datum": "2016"}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 185,
        "dy": -15,
        "fontSize": 9,
        "fontStyle": "italic",
        "color": "darkred"
      },
      "encoding": {
        "x": {"datum": 2016},
        "y": {"datum": 850000},
        "text": {"value": "Brexit referendum"}
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "darkred",
        "strokeDash": [5, 5],
        "strokeWidth": 1.5
      },
      "encoding": {
        "x": {"datum": "2020"}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 330,
        "dy": -15,
        "fontSize": 9,
        "fontStyle": "italic",
        "color": "darkred"
      },
      "encoding": {
        "x": {"datum": 2020},
        "y": {"datum": 850000},
        "text": {"value": "UK left EU"}
      }
    }
  ],
  "resolve": {
    "scale": {
      "y": "independent"
    }
  }
}