{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#FFFBF5",
  "width": 750,
  "height": 350,
  "params": [
    {
      "name": "SelectParam",
      "value": "Electricity Access",
      "bind": {
        "input": "select",
        "options": [
          "Electricity Access",
          "Electric Power Consumption"
        ],
        "labels": [
          "Access Rate (%)",
          "Power Consumption (kWh/capita)"
        ],
        "name": "Select series:"
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Noura-23/Noura-23.github.io/refs/heads/main/Week%209/Africa_map.json",
        "format": {
          "property": "features"
        }
      },
      "mark": {
        "type": "geoshape",
        "color": "whitesmoke",
        "stroke": "white",
        "strokeWidth": "0.3"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Noura-23/Noura-23.github.io/refs/heads/main/Week%209/Africa_map.json",
        "format": {
          "property": "features"
        }
      },
      "title": {
        "text": "Electricity Access vs. Electricity Use in Africa",
        "align": "left",
        "anchor": "start",
        "offset": 20,
        "fontSize": 14,
        "subtitle": [
          "Comparing electricity access (% of population) and electricity consumption (kWh per capita)",
          "Source: World Bank (2022); International Energy Agency (2022)"
        ],
        "subtitleFontStyle": "italic",
        "subtitleFontSize": 10,
        "subtitleFontWeight": "lighter",
        "color": "black"
      },
      "projection": {
        "type": "mercator"
      },
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 0.3
      },
      "transform": [
        {
          "lookup": "properties.iso_a3",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Noura-23/Noura-23.github.io/refs/heads/main/Week%209/Africa_indicators.csv"
            },
            "key": "iso",
            "fields": [
              "Electricity Access",
              "Electric Power Consumption",
              "name"
            ]
          }
        },
        {
          "calculate": "datum[SelectParam]",
          "as": "varSelected"
        }
      ],
      "encoding": {
        "color": {
          "field": "varSelected",
          "legend": {
            "title": "",
            "direction": "vertical",
            "orient": "right", 
            "offset": -50, 
            "padding": 10 
          },
          "type": "quantitative",
          "scale": {
            "scheme": "redpurple",
            "reverse": false
          }
        },
        "tooltip": [
          {
            "field": "name",
            "title": "Country",
            "type": "nominal"
          },
          {
            "field": "Electricity Access",
            "title": "Access (%)",
            "type": "quantitative",
            "format": ".1f"
          },
          {
            "field": "Electric Power Consumption",
            "title": "Consumption (kWh/capita)",
            "type": "quantitative",
            "format": ",.0f"
          }
        ]
      }
    }
  ]
}