{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#FFFBF5",
  "title": {
    "text": "Electric Power Consumption (kWh per capita)",
    "align": "left",
    "anchor": "start",
    "offset": 20,
    "fontSize": 14,
    "subtitle": [
      "Electric power consumption across 25 African countries",
      "Source: IEA Energy Statistics Data Browser, International Energy Agency (2022)"
    ],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "subtitleFontWeight": "lighter",
    "color": "black"
  },
  "view": {
    "stroke": "transparent"
  },
  "width": 400,
  "height": 350,
  "data": {
    "url": "https://raw.githubusercontent.com/Noura-23/Noura-23.github.io/refs/heads/main/Project_data/chart2.csv"
  },
  "layer": [
    {
      "mark": {
        "type": "bar",
        "color": "#c41b8a"
      },
      "encoding": {
        "x": {
          "field": "consumption",
          "type": "quantitative",
          "title": null
        },
        "scale": {
          "domain": [
            0,
            4000
          ]
        },
        "y": {
          "field": "country",
          "title": null,
          "type": "nominal",
          "sort": "-x"
        },
        "tooltip": [
          {
            "field": "consumption",
            "type": "quantitative",
            "title": "kWh per capita",
            "format": ",.1f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "rule",
        "strokeDash": [
          5,
          5
        ],
        "color": "grey",
        "strokeWidth": 1
      },
      "encoding": {
        "x": {
          "datum": 1000
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "bottom",
        "dy": -200,
        "fontSize": 10,
        "color": "gray"
      },
      "encoding": {
        "x": {
          "datum": 1000
        },
        "text": {
          "value": "1,000 kWh/capita"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "top",
        "dy": -190,
        "fontSize": 9,
        "fontStyle": "italic",
        "color": "gray"
      },
      "encoding": {
        "x": {
          "datum": 1000
        },
        "text": {
          "value": "Threshold for basic modern energy access"
        }
      }
    }
  ]
}