{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Electric power consumption across 25 African countries",
  "title": {
    "text": "Living on 3 Lightbulbs",
    "subtitle": [
      "Electric Power Consumption (kWh per capita), 2022. 25 African countries",
      "Source: IEA Energy Statistics Data Browser, International Energy Agency ( IEA "
    ],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 11,
    "anchor": "start",
    "color": "black",
    "offset": 10
  },
  "view": {"stroke": "transparent"},
  "width": 300,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/Noura-23/Noura-23.github.io/refs/heads/main/Project_data/chart2.csv"
  },
  "layer": [
    {
      "mark": {"type": "bar", "color": "#f98faf"},
      "encoding": {
        "x": {"field": "consumption", "type": "quantitative", "title": null},
        "scale": {"domain": [0, 4000]},
        "y": {
          "field": "country",
          "title": null,
          "type": "nominal",
          "sort": "-x"
        },
        "tooltip": [
          {
            "field": "consumption",
            "type": "quantitative",
            "title": "kWh per capita",
            "format": ",.1f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "rule",
        "strokeDash": [5, 5],
        "color":"grey",
        "strokeWidth": 1
      },
      "encoding": {
        "x": {"datum": 1000}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "bottom",
        "dy": -175,
        "fontSize": 10,
        "color": "gray"
      },
      "encoding": {
        "x": {"datum": 1000},
        "text": {"value": "1,000 kWh/capita"}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "top",
        "dy": -170,
        "fontSize": 9,
        "fontStyle": "italic",
        "color": "gray"
      },
      "encoding": {
        "x": {"datum": 1000},
        "text": {"value": "World Bank threshold for basic modern energy access"}
      }
    }
  ]
}