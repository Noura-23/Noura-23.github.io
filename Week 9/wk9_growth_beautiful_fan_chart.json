{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "UK Growth Forecasts",
    "width": 600,
    "height": 400,
    "config": {
        "background": "#fffefb",
        "font": "Georgia",
        "view": {
            "stroke": null
        }
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/refs/heads/main/misc/Forecast_Uncertainty/obr_growth_uncertainty_ranges.csv"
            },
            "mark": {
                "type": "area"
            },
            "encoding": {
                "x": {
                    "field": "Year",
                    "axis": {
                        "grid": false
                    },
                    "type": "temporal",
                    "title": ""
                },
                "y": {
                    "field": "lower",
                    "type": "quantitative",
                    "axis": {
                        "gridDash": [
                            3,
                            5
                        ],
                        "labelExpr": "datum.label + '%'"
                    },
                    "title": ""
                },
                "y2": {
                    "field": "upper"
                },
                "color": {
                    "field": "band",
                    "type": "nominal",
                    "scale": {
                        "domain": [
                            "10-90",
                            "20-80",
                            "30-70"
                        ],
                        "range": [
                            "rgba(54, 183, 181, 0.1)",
                            "rgba(54, 183, 181, 0.2)",
                            "rgba(54, 183, 181, 0.6)"
                        ]
                    },
                    "legend": null
                },
                "order": {
                    "field": "band",
                    "type": "ordinal",
                    "sort": "descending"
                }
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/refs/heads/main/misc/Forecast_Uncertainty/obr_growth_forecasts.csv"
            },
            "layer": [
                {
                    "mark": {
                        "type": "line",
                        "strokeWidth": 2
                    },
                    "encoding": {
                        "x": {
                            "field": "Year",
                            "type": "temporal"
                        },
                        "y": {
                            "field": "value",
                            "type": "quantitative"
                        },
                        "color": {
                            "field": "forecast",
                            "title": "Forecast date",
                            "legend": {
                                "orient": "top",
                                "titleOrient": "left"
                            },
                            "type": "nominal",
                            "scale": {
                                "range": [
                                    "#f4c245",
                                    "#eb5c2e"
                                ]
                            }
                        }
                    }
                }
            ]
        }
    ],
    "title": {
        "text": "Uncertain Growth",
        "fontWeight": "normal",
        "subtitleFontWeight": "lighter",
        "subtitle": [
            "November and March UK GDP Growth Forecasts. 10-90 Percentiles shaded",
            "Source: OBR (2025)",
            ""
        ],
        "frame": "group",
        "fontSize": 20,
        "anchor": "start",
        "color": "#000000"
    },
    "resolve": {
        "scale": {
            "color": "independent"
        }
    }
}